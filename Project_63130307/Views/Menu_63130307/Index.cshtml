
@model IEnumerable<Project_63130307.Models.Menu>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h2 class="text-center">Danh sách menu</h2>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th width="20%">Tên</th>
						<th width="60%">
							Link
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>

						<td>
							@Html.DisplayFor(modelItem => item.Link)
						</td>
						<td>
							@Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "far fa-edit btn btn-outline-success" }) |

							<a href="@Url.Action("Detail","AuraStore_63130307",new { id=item.ID})" class="btn btn-outline-success" target="_blank">Chi tiết</a> |
							@Html.ActionLink(" ", "UnactiveProduct", new { id = item.ID }, new { onclick = "return confirm('Bạn chắc chắn muốn xóa?');", @class = "far fa-trash-alt btn btn-outline-success" })
						</td>
					</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
