@model Project_63130307.ViewModel.MenuAndItemTypeViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.MenuName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.MenuName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Link, new { @class = "form-control" })
            </div>
        </div>

        <h4>Item Types</h4>
        <div id="item-types">
            @for (int i = 0; i < Model.ItemTypeNames.Count; i++)
            {
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.TextBoxFor(m => m.ItemTypeNames[i], new { @class = "form-control", placeholder = "Enter item type name" })
                    </div>
                </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="button" class="btn btn-default" onclick="addItemType()">Add another type</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function addItemType() {
            var index = $('#item-types input').length;
            var html = `
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <input type="text" name="ItemTypeNames[${index}]" class="form-control" placeholder="Enter item type name" />
                        </div>
                    </div>`;
            $('#item-types').append(html);
        }
    </script>
}